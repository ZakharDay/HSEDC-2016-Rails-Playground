<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<%= link_to 'New Post', new_post_path %>

<section class="postsFeed">
  <% @posts.each do |post| %>

    <div class="post">
      <h2><%= link_to post.title, post %></h2>
      <p><%= post.teaser %></p>

      <div>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>

  <% end %>
</section>
